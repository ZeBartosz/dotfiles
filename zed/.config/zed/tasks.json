// Project tasks configuration. See https://zed.dev/docs/tasks for documentation.
//
// Example:
[
  // Telescope
  {
    "label": "file_finder",
    "command": "zed \"$(tv files)\"",
    "hide": "always",
    "allow_concurrent_runs": true,
    "use_new_terminal": true
  },
  // LazyGit
  {
    "label": "LazyGit",
    "command": "lazygit",
    "shell": {
      "program": "sh"
    },
    "hide": "on_success",
    "reveal_target": "center",
    "show_summary": false,
    "show_command": false,
    "allow_concurrent_runs": true,
    "use_new_terminal": true
  },
  // GitPullRequest
  {
    "label": "GitPR",
    "command": "gh pr create --web",
    "reveal": "never",
    "hide": "on_success",
    "use_new_terminal": false,
    "show_summary": false,
    "show_command": false
  },
  // GitRepo
  {
    "label": "GitRepo",
    "command": "gh repo view --web",
    "reveal": "never",
    "hide": "on_success",
    "use_new_terminal": false,
    "show_summary": false,
    "show_command": false
  }
]
